@{
    ViewData["Title"] = "MoviesDetailViews";
}

<h1>List of Movies</h1>

<div class="container">
    <table class="table">
        <tr>
            <th>title</th>
            <th>Genre</th>
            <th>Release Data</th>
            <th>Director</th>
            <th>Ranking</th>
        </tr>

        @foreach (var movie in @Model.Movies)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Genre.name</td>
                <td>@movie.ReleaseDate</td>
                <td>@string.Format("{0} {1}", @movie.Director.FirstName, @movie.Director.LastName)</td>
            </tr>
        }
    </table>
</div>